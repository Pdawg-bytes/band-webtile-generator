    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Pivot Margin="15,10,0,0">
            <PivotItem Header="Layout">
                <TextBlock Text="tile layout" />
            </PivotItem>
            <PivotItem Header="Data source">
                <TextBlock Text="tile data source(s)" />
